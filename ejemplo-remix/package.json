{
  "type": "commonjs",
  "private": true,
  "sideEffects": false,
  "resolutions": {
    "is-promise": "2.1.0",
    "run-async/is-promise": "2.1.0"
  },
  "scripts": {
    "build": "npm-run-all -p build:*",
    "lint": "eslint app/*.tsx app/**/*.ts --fix",
    "build:css": "npm run generate:css -- --minify",
    "build:remix": "cross-env NODE_ENV=production remix build",
    "dev": "npm-run-all -p dev:*",
    "dev:css": "npm run generate:css -- --watch",
    "dev:remix": "cross-env NODE_ENV=development remix dev",
    "generate:css": "npx tailwindcss -o ./app/tailwind.css",
    "start": "remix-serve build",
    "build:worker": "esbuild ./app/entry.worker.ts --outfile=./public/entry.worker.js --minify --bundle --format=esm --define:process.env.NODE_ENV='\"production\"'",
    "dev:worker": "esbuild ./app/entry.worker.ts --outfile=./public/entry.worker.js --bundle --format=esm --define:process.env.NODE_ENV='\"development\"' --watch"
  },
  "dependencies": {
    "@emotion/react": "^11.9.3",
    "@emotion/styled": "^11.9.3",
    "@mui/icons-material": "^5.8.4",
    "@mui/material": "^5.8.4",
    "@remix-run/node": "^1.5.1",
    "@remix-run/react": "^1.5.1",
    "@remix-run/serve": "^1.5.1",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.0",
    "firebase": "^9.8.3",
    "konsta": "^0.10.4",
    "node-persist": "^3.1.0",
    "npm-run-all": "^4.1.5",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "web-push": "^3.4.5"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.5.1",
    "@remix-run/eslint-config": "^1.6.0",
    "@types/node-persist": "^3.1.2",
    "@types/react": "^17.0.45",
    "@types/react-dom": "^17.0.17",
    "eslint": "^8.17.0",
    "npm-run-all": "^4.1.5",
    "tailwindcss": "^3.1.2",
    "typescript": "^4.6.4"
  },
  "engines": {
    "node": ">=14"
  }
}
